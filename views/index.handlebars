<h1>Burgers</h1>

<h2>Burgers Available</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">State?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eaten<br>
    <input type="radio" name="sleepy" value="0"> Ready to Eat
  </div>

  <button type="submit">Add Burger</button>
</form>
